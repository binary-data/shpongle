{
    "name": "binarydata/shpongle",
    "type": "library",
    "description": "Minimalistic PSR-7 / PSR-15 framework",
    "authors": [
        {
            "name": "Anton Belonovich",
            "email": "tralick@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Binarydata\\Shpongle\\": "src/"
        }
    },
    "require": {
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "laminas/laminas-httphandlerrunner": "^1.3",
        "psr/container": "^1.0",
        "php-di/php-di": "^6.3",
        "nikic/fast-route": "^1.3",
        "twig/twig": "^3.0",
        "league/flysystem": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^4.3",
        "phpstan/phpstan": "^0.12.64",
        "phan/phan": "^4.0",
        "phpmd/phpmd": "^2.9",
        "friendsofphp/php-cs-fixer": "^2.17",
        "squizlabs/php_codesniffer": "^3.5",
        "composer/composer": "^2.0"
    },
    "scripts": {
        "post-install-cmd": ["Binarydata\\Shpongle\\Console\\StartProject::run"]
    }
}
